<div class="auth-container">

  <h1 class="auth-title">Login</h1>

  <form class="auth-form" action="/auth/login" method="POST" id="form-container">
    <label for="username">Username</label>
    <input class="form-text-input" id="username" type="text" name="username" placeholder="JonSnow">

    <label for="password">Password</label>
    <input class="form-text-input" id="password" type="password" name="password" placeholder="Your password">

    {{#if message }}
    <div class="error-message">{{ message }}</div>
    {{/if}}


    <button class="auth-button">Login</button>
    <nav>
      <a href="/auth/edit">Edit your user</a>
    </nav>


    <p class="account-message">
      Don't have an account yet?
      <a href="/auth/signup">Signup</a>
    </p>
  </form>
</div>