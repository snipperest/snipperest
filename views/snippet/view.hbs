<h1>{{snippet.title}}</h1>
<p>Created by: {{snippet.creator.username}}</p>
{{#if snippet.pic.picPath}}
<img src="{{snippet.pic.picPath}}" alt="{{snippet.pic.picName}}">
{{/if}}
<p>Language: {{snippet.language}}</p>
<p>Description: {{snippet.description}}</p>
<p>Code: </p>
<textarea name="code" id="code"  cols="30" rows="10">
  {{snippet.code}}
</textarea>
 
<p>Board: {{snippet.board.name}}</p>
{{#if snippet.source}}
<p>Source: <a href="{{snippet.source}}">{{snippet.source}}</a></p>
{{/if}}

<form action="/snippets/{{snippet._id}}/edit" method="GET">
  <button>Edit snippet</button></form>

<form action="/snippets/{{snippet._id}}/{{snippet.creator._id}}/delete" method="POST">
  <button>Delete snippet</button></form>